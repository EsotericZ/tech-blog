{{> navbar}}

<h3>Welcome {{user.username}}</h3>

<div class="posts">
  {{#each userPosts as |post| }}
  <div class="card">
    <div class="card-header flex-row justify-space=between">
      <h2>{{ post.title }}</h2>
      <h4>{{ post.createdAt }}</h4>
    </div>
    <div class="card-body">
      {{ post.body }}
    </div> 
    <div class="postbtn">
      <button type="button" data-bs-toggle="modal" data-bs-target="#t{{ post.id }}" class="btn btn-dark btn-sm">
        Delete Post
      </button>
      <button type="button" data-bs-toggle="modal" data-bs-target="#d{{ post.id }}" class="btn btn-dark btn-sm">
        Edit Post
      </button>
    </div>        
  </div>

    <!-- Edit Post Modal -->
  <div class="modal fade" id="d{{ post.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelEvent" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabelEvent">Edit Post</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <div ="container-fluid">
                      <div class="input-group mb-3">
                          <span class="input-group-text col-5">Title</span>
                          <input type="text" class="form-control" value="{{ post.title }}" id="postTitle" editname="{{ post.id }}">
                      </div>
                      <div class="input-group mb-3">
                          <span class="input-group-text col-5">Body</span>
                          <input type="text" class="form-control" value="{{ post.body }}" id="postBody" editname="{{ post.id }}">
                      </div>
                      <div class="input-group mb-3">
                          <input type="hidden" class="form-control" value="{{ post.id }}" id="postId" editname="{{ post.id }}">
                      </div>
                  </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-dark editPostBtn" data-bs-dismiss="modal" editname="{{ post.id }}">Update</button>
              </div>
          </div>
      </div>
  </div>

    <!-- Delete Post Modal -->
  <div class="modal fade" id="t{{ post.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelEvent" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabelEvent">Delete Post</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">

                  <div ="container-fluid">
                      <div class="modal-body">
                        Are you sure you want to delete this post? 
                      </div>
                      <div class="input-group mb-3">
                          <input type="hidden" class="form-control" value="{{ post.id }}" id="deleteId" delname="{{ post.id }}">
                      </div>
                  </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-danger deletePostBtn" data-bs-dismiss="modal" delname="{{ post.id }}">Delete</button>
                  <button class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
              </div>
          </div>
      </div>
  </div>


  {{/each}}
</div>
<div class="text-center" id="newpostbtn">
  <a href='/newpost'>
    <button type="button" class="btn btn-dark" id="createPostBtn">Create New Post</button>
  </a>
</div>