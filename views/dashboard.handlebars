{{> navbar}}

<h3>Dashboard</h3>

<div class="posts">
  {{#each allPosts as |post| }}
  <div class="card">
    <div class="card-header flex-row justify-space=between">
      <h2>{{ post.title }}</h2>
      <h4>{{ user.username }}</h4>
        <div>
          <h4>{{ post.createdAt }}</h4>
        </div>
    </div>

    <div class="card-body">
      {{ post.body }}
    </div>
    <div>
      <h2 id="comments"><a href="/api/comments/{{ post.id }}">Comments</a></h2>
    </div>        
  </div>
  {{/each}}
</div>